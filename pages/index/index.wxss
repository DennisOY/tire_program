/**index.wxss**/

page {
  height: 100%;
  background: #eee;
}

.brand_container {
  display: grid;
  width: 100%;
  height: 47%;
  overflow-x: hidden;
  /* 设置列、行大小 fr单位是等分分配列空间*/
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  /* 有多余数据时，自动添加新行时默认行高为：200rpx */
  grid-auto-rows: 200rpx;
  /* 设置网格线大小 */
  grid-gap: 10rpx;
  background: white;
}

.swiper_container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 20%;
  background: white;
  margin-top: 2%;
}

.picture_container{
  display: grid;
  width: 100%;
  height: 20%;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 2rpx;
  background: white;
  margin-top: 2%;
}

.swiper {
  width: 95%;
  height: 90%;
}

.swiper_image {
  width: 100%;
  height:100%;
  border-radius: 3%;
}

.static_pic_info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.static_pic_image {
  width: 90%;
  height:60%;
  border-radius: 10%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx;
}

.userinfo-avatar {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  border: 2rpx solid grey;
}

.userinfo-nickname {
  font-size: 25rpx;
  color: black;
  margin-top: 5rpx;
}
