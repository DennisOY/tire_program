/* pages/tirecalculator/tirecalculator.wxss */

page {
  width: 100%;
  background: #eee;
}

.topmenu_container {
  width: 100%;
  display: flex;
  position: relative;
  height: 90rpx;
  z-index: 10;
  background-color: #fff;
  align-items: center;
  justify-content: space-around;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  font-size: 10pt;
  color: #555;
  box-sizing: border-box;
}

.menu_option {
  display: flex;
  flex-direction: row;
  width: 50%;
  height: 100%;
  z-index: 3;
}

.menu_left_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  background-color: black;
  color: white;
}

.menu_middle_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
}

.menu_right_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  background-color: #d81e06;
  color: white;
}

.menu_right_icon {
  display: flex;
  position: relative;
  right: 0%;
  align-items: center;
  justify-content: center;
  width: 15%;
}

.state-menu {
  display: flex;
  position: absolute;
  height: 24%;
  width: 100%;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  z-index: 5;
  background-color: #fff;
  font-size: 11pt;
  color: #555;
  box-sizing: border-box;
}

.state-item {
  position: relative;
  width: 90%;
  height: 80rpx;
  left: 5%;
  font-size: 11pt;
  line-height: 70rpx;
  text-align: left;
  border-bottom: 3rpx solid #eee;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 4;
  background: rgba(0, 0, 0, 0.3);
}

.tire_container {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 92%;
  box-sizing: border-box;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.text_container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  height: 60rpx;
  background-color: #999;
  color: white;
}

.pic_container {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.pic_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 50%;
  box-sizing: border-box;
}

.tire_img{
  width: 80%;
  height:70%;
}

.parameter_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 250rpx;
  width: 33.3%;
  box-sizing: border-box;
}

.parameter_img{
  width: 50%;
  height:45%;
}

.img_desc {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  color: snow;
  width: 150rpx;
  height: 50rpx;
  border: 2rpx solid #ddd;
  border-radius: 10%;
}

.updateinfo_container {
  width: 92%;
  box-sizing: border-box;
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.parameter_table_container {
  width: 92%;
  box-sizing: border-box;
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.icon_view {
  display: flex;
  justify-content: center;
  align-content: center;
  height: 100%;
  width: 10%;
}
