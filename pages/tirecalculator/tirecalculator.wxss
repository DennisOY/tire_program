/* pages/tirecalculator/tirecalculator.wxss */

page {
  width: 100%;
  background: #eee;
}

.topmenu_container {
  width: 100%;
  display: flex;
  position: relative;
  height: 90rpx;
  z-index: 10;
  background-color: #fff;
  align-items: center;
  justify-content: space-around;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  font-size: 10pt;
  color: #555;
  box-sizing: border-box;
}

.menu_option {
  display: flex;
  flex-direction: row;
  width: 50%;
  height: 100%;
}

.menu_left_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  background-color: black;
  color: white;
}

.menu_middle_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
}

.menu_right_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  background-color: #d81e06;
  color: white;
}

.menu_right_icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 15%;
}

.tire_container {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 92%;
  box-sizing: border-box;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.text_container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  height: 60rpx;
  background-color: #999;
  color: white;
}

.pic_container {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.pic_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 50%;
  box-sizing: border-box;
}

.tire_img{
  width: 60%;
  height:60%;
  border: 2rpx solid yellow;
  margin-bottom: 10%;
}

.parameter_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 250rpx;
  width: 33.3%;
  box-sizing: border-box;
}

.parameter_img{
  width: 50%;
  height:40%;
  border: 2rpx solid yellow;
}

.img_desc {
  position: relative;
  width: 150rpx;
  height: 50rpx;
  border: 2rpx solid #ddd;
  border-radius: 10%;
}

.updateinfo_container {
  width: 92%;
  box-sizing: border-box;
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.parameter_table_container {
  width: 92%;
  box-sizing: border-box;
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  margin-bottom: 2%;
  margin-top: 2%;
}

.icon_view {
  display: flex;
  justify-content: center;
  align-content: center;
  height: 100%;
  width: 10%;
}
