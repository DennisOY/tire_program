/* pages/tireinfo/tireinfo.wxss */

page {
  height: 100%;
  background: #eee;
}

.swiper_container {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 50%;
  margin-top: 3%;
  border-radius: 3%;
}

.swiper {
  background: white;
  width: 95%;
  height: 100%;
  border-radius: 3%;
}

.swiper_image {
  width: 100%;
  height: 100%;
  border-radius: 3%;
}

.product_container {
  display: flex;
  flex-direction: column;
  background: white;
  width: 95%;
  margin-left: 2.5%;
  margin-right: 2.5%;
  height: 40%;
  border-radius: 3%;
  margin-top: 3%;
}

.product_name {
  position: relative;
  font-size: 14pt;
  background: rgb(230, 12, 59);
  height: 25%;
  width: 100%;
  border-radius: 3px;
  padding-left: 3%;
  padding-top: 3%;
  justify-content: center;
  color: white;
  border: 3rpx solid green;
}

.product_desc {
  display: flex;
  position: relative;
  align-items: center;
  font-size: 10pt;
  height: 30%;
  width: 80%;
  color:#eee;
  border: 3rpx solid green;
}

.product_model {
  display: flex;
  position: relative;
  align-items: center;
  font-size: 10pt;
  padding-left: 3%;
  height: 15%;
  width: 95%;
}
